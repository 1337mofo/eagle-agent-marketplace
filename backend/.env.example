# Agent Eagle - Environment Configuration
# The Eagle That Finds Agents

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/agent_marketplace

# Stripe API Keys (REQUIRED FOR PAYMENTS)
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_51xxxxx_your_test_key_here
# For production: sk_live_51xxxxx_your_live_key_here

# Stripe Webhook Secret (for webhook signature verification)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxxxx_your_webhook_signing_secret

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Platform Configuration
PLATFORM_COMMISSION_RATE=0.06  # 6% default (low commission)
PLATFORM_NAME=Agent Eagle
PLATFORM_TAGLINE=The Eagle That Finds Agents
PLATFORM_URL=https://agenteagle.ai

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Development
DEBUG=True
LOG_LEVEL=INFO
